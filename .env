# AI Provider (Required)
GOOGLE_GEMINI_API_KEY=your_gemini_key_here

# File Storage (Required for uploads)
BLOB_READ_WRITE_TOKEN=your_blob_token_here

# Database & Cache
POSTGRES_URL=postgresql://postgres:password@localhost:5432/nextai
REDIS_URL=redis://localhost:6379

# Auth (Required)
AUTH_SECRET=your_auth_secret_here  # Generate with: openssl rand -base64 32

# Optional - Alternative AI Provider
XAI_API_KEY=your_xai_key_here

# Auth Callback URL (Optional - defaults to localhost in development)
NEXTAUTH_URL=http://localhost:3000
